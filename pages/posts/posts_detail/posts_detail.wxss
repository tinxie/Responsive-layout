.container{
   display:flex;
   flex-direction: column;
}

.photo{
  width:100%;
  height:400rpx;
}
.music_icon{
  position: absolute;
  top: 150rpx;
   margin-left:40%;
   width:80px;
   height:80px;
}

.author{
  margin: 15px 20px 10px 10px;

}

.author image{
  width:80rpx;
  height:80rpx;
  border-radius: 40rpx;
  margin-left: 10px;
  vertical-align: middle;
}
.author text{
  font-size: 14px;
  padding-left: 10px
}
.title{
  padding-left: 20px;
  font-weight: bold;
  font-size:20px;
}
.share{
  margin-top: 15px;
}
.share_image text{
  display: inline-block;
  width:40px;
  height: 40px;
  border-radius: 20px;
  background-color: #c0c0c0;
  font-size: 16px;
  text-align: center;
  float: right;
  margin-left: 20px
}
.share_image image{
  width:50px;
  height:50px;
  vertical-align: middle;
  float:right;
  margin-right:10px; 
}

 .share .line{
  width:100%;
  height:1px;
  background-color:#c0c0c0;
  position: relative;
  top: 0;
  z-index: -99;
  
}
.content{
  margin-left: 15px;
  font-size: 14px;
  text-indent: 2em;
}